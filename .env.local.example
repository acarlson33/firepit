# Copy this file to .env.local and fill in your values

# Appwrite Configuration (required)
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://nyc.cloud.appwrite.io/v1
NEXT_PUBLIC_APPWRITE_PROJECT_ID=your-project-id

# Database and Collection IDs (required)
APPWRITE_DATABASE_ID=your-database-id
APPWRITE_SERVERS_COLLECTION_ID=your-servers-collection-id
APPWRITE_CHANNELS_COLLECTION_ID=your-channels-collection-id
APPWRITE_MESSAGES_COLLECTION_ID=your-messages-collection-id
APPWRITE_MODERATION_COLLECTION_ID=your-moderation-collection-id
APPWRITE_AUDIT_COLLECTION_ID=your-audit-collection-id
NEXT_PUBLIC_APPWRITE_PROFILES_COLLECTION_ID=profiles
NEXT_PUBLIC_APPWRITE_AVATARS_BUCKET_ID=avatars

# Direct Messages and Status (optional - for DM and status features)
NEXT_PUBLIC_APPWRITE_CONVERSATIONS_COLLECTION_ID=conversations
NEXT_PUBLIC_APPWRITE_DIRECT_MESSAGES_COLLECTION_ID=direct_messages
NEXT_PUBLIC_APPWRITE_STATUSES_COLLECTION_ID=statuses

# Team IDs (optional - used for role-based access control)
APPWRITE_ADMIN_TEAM_ID=your-admin-team-id
APPWRITE_MODERATOR_TEAM_ID=your-moderator-team-id

# Bootstrap Admin Users (optional - comma-separated user IDs)
# Use this to grant admin access before teams are set up
# Visit /api/me after logging in to get your user ID
APPWRITE_ADMIN_USER_IDS=your-user-id-here

# Bootstrap Moderator Users (optional - comma-separated user IDs)
APPWRITE_MODERATOR_USER_IDS=

# Server API Key (optional - for server-side operations)
# Get this from Appwrite Console > Settings > API Keys
APPWRITE_API_KEY=
